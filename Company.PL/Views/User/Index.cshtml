@model List<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

@if (!string.IsNullOrWhiteSpace(TempData["SuccessDelete"] as string))
{
    <div aria-live="polite" aria-atomic="true" class="toast-container position-fixed p-3" style="bottom: 25px; right:25px; z-index: 100;">
        <div class="toast fade show " role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto text-success">Success!!</strong>
                <small>Just now</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                @TempData["SuccessDelete"]
            </div>
        </div>
    </div>
}

@if (!string.IsNullOrWhiteSpace(TempData["FailedDelete"] as string))
{
    <div aria-live="polite" aria-atomic="true" class="toast-container position-fixed p-3" style="bottom: 25px; right:25px; z-index: 100;">
        <div class="toast fade show " role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto text-danger">Fail</strong>
                <small>Just now</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                @TempData["FailedDelete"]
            </div>
        </div>
    </div>
}


<h1>All Users</h1>
<br />
<br />

<div class="m-2">
    <form asp-action="index" class="row offset-2" method="get">
        <div class="col-8">
            <input id="searchInp" class="form-control" type="text" name="UserSearchName" placeholder="Search User By Name" />
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-outline-success" value="Search" />
        </div>
    </form>
</div>

<br />
@if (Model?.Any() ?? false)
{
    <table id="userTable" class="table table-striped table-hover mt-3">
        <thead class="text-center">
            <tr>
                <th>Id</th>
                <th>FName</th>
                <th>LName</th>
                <th>Email</th>
                <th>PhoneNumber</th>
                <th>Roles</th>
                <th>Details </th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var user in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(u => user.Id)</td>
                    <td>@Html.DisplayFor(u => user.FName)</td>
                    <td>@Html.DisplayFor(u => user.LName)</td>
                    <td>@Html.DisplayFor(u => user.Email)</td>
                    <td>@Html.DisplayFor(u => user.PhoneNumber)</td>
					<td>
						@foreach (var role in user.Roles)
						{
					        <span>@role</span>
				        }
				    </td>


                    <td>
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@user.Id">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>

                    <td>
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@user.Id">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    </td>

                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@user.Id">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-3">
        <h2>No Users Found !!</h2>
    </div>
}

<script>
    $(document).ready(function () {
        const searchBar = $('#searchInp');
        const table = $('#userTable');

        searchBar.on('keyup', function (event) {
            var searchValue = searchBar.val();

            $.ajax({
                url: '/User/Search',
                type: 'Get',
                data: { userSearchName: searchValue },
                success: function (result) {
                    table.html(result);
                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        });
    });
</script>