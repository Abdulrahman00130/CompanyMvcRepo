@model List<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Users</h1>
<br />
<br />

@if (Model?.Any() ?? false)
{
    <table class="table table-striped table-hover mt-3">
        <thead class="text-center">
            <tr>
                <th>Id</th>
                <th>FName</th>
                <th>LName</th>
                <th>Email</th>
                <th>PhoneNumber</th>
                <th>Roles</th>
                <th>Details </th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var user in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(u => user.Id)</td>
                    <td>@Html.DisplayFor(u => user.FName)</td>
                    <td>@Html.DisplayFor(u => user.LName)</td>
                    <td>@Html.DisplayFor(u => user.Email)</td>
                    <td>@Html.DisplayFor(u => user.PhoneNumber)</td>
					<td>
						@foreach (var role in user.Roles)
						{
					        <tr>
					        	<td>role</td>
					        </tr>
				        }
				    </td>


                    <td>
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@user.Id">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>

                    <td>
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@user.Id">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    </td>

                    <td>
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#DeleteModal-@user.Id">
                            <i class="fas fa-trash"></i> Delete
                        </button>

                        <div class="modal fade" id="DeleteModal-@user.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Delete User</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are You Sure to Delete this User?
                                    </div>
                                    <div class="modal-footer">
                                        <form asp-action="Delete" asp-controller="User" asp-route-id="@user.Id" class="mt-4">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <input type="submit" value="Delete" class="btn btn-danger" />
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-3">
        <h2>No Users Found !!</h2>
    </div>
}

