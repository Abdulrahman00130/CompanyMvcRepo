@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-controller="Account" asp-action="SendResetPasswordLink" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <input asp-for="Email" placeholder="Email" required="">
            <span asp-validation-for="Email"></span>
            <br />
            <input type="submit" value="Send Reset Password Link Through Email">
            <input formaction="@Url.Action("SendResetPasswordLinkSMS")" type="submit" value="Send Reset Password Link Through SMS">
        </form>

        <p> <a asp-action="Login">Cancel</a></p>
    </div>
</div>

