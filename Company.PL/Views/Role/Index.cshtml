<h1>All Roles</h1>
<br />
<br />

<div class="d-flex justify-content-start align-items-center m-3 gap-3">
    <form asp-action="Create" class="d-flex flex-fill" method="post">
        <input class="form-control me-2" type="text" name="newRoleName" placeholder="Enter New Role Name" required="" />
        <input type="submit" class="btn btn-outline-primary" value="Add Role" />
    </form>

    <form asp-action="Index" class="d-flex flex-fill" method="get">
        <input class="form-control me-2" type="text" name="RoleSearchName" placeholder="Search Role By Name" />
        <input type="submit" class="btn btn-outline-success" value="Search" />
    </form>
</div>



<br />
@if (Model?.Any() ?? false)
{
    <table class="table table-striped table-hover mt-3">
        <thead class="text-center">
            <tr>
                <th>Id</th>
                <th>RoleName</th>
                <th>Details </th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var role in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(u => role.Id)</td>
                    <td>@Html.DisplayFor(u => role.RoleName)</td>


                    <td>
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@role.Id">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>

                    <td>
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@role.Id">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    </td>

                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@role.Id">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-3">
        <h2>No Roles Found !!</h2>
    </div>
}
