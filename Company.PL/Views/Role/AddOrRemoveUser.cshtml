@model List<UserInRoleViewModel>
@{
    ViewData["Title"] = "AddOrRemoveUser";
    var roleId = ViewData["RoleId"] as string;
}

<h1>Add Or Remove Users To The Role</h1>
<br />
<br />
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<br />
<br />

@if (Model?.Any() ?? false)
{
    <form asp-action="AddOrRemoveUser" asp-route-roleId="@roleId">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="form-group align-content-center">
                <input asp-for="@Model[i].IsSelected" />
                <label asp-for="@Model[i].IsSelected">@Model[i].Username</label>
                <span asp-validation-for="@Model[i].IsSelected" class="text-danger"></span>

                <input type="hidden" asp-for="@Model[i].Id" readonly/>
                <input type="hidden" asp-for="@Model[i].Username" readonly/>
            </div>
        }
        <div class="mt-4 m-auto">
            <input class="btn btn-success" type="submit" value="Update" />
            <a asp-controller="Role" asp-action="Edit" asp-route-id="@roleId" class="btn btn-outline-dark">Cancel</a>
        </div>
    </form>
    
}
else
{
    <div class="alert alert-info mt-3">
        <h2>No Users Found !!</h2>
    </div>
}
<br />
<br />

<a asp-controller="Role" asp-action="Edit" asp-route-id="@roleId" class="btn btn-outline-dark">Cancel</a>